{
  "name": "package-manager-stats",
  "version": "1.0.0",
  "description": "Script to get stats about package managers used in most popular projects on GitHub.",
  "type": "module",
  "scripts": {
    "dev": "bun --watch index.ts",
    "lint": "eslint . --ext .ts",
    "postinstall": "husky",
    "prettier": "prettier --check . --cache",
    "start": "bun src/index.ts",
    "test": "bun run lint && bun run tsc && bun run prettier",
    "tsc": "tsc"
  },
  "keywords": [
    "package manager",
    "stats",
    "statistics",
    "npm",
    "yarn",
    "pnpm",
    "bun"
  ],
  "author": {
    "name": "Wojciech Maj",
    "email": "kontakt@wojtekmaj.pl"
  },
  "license": "MIT",
  "dependencies": {
    "@wojtekmaj/async-array-utils": "^1.8.0",
    "chalk": "^5.0.0",
    "semver": "^7.5.0"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/node": "20",
    "eslint": "^8.56.0",
    "eslint-config-wojtekmaj": "^0.11.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wojtekmaj/package-manager-stats.git"
  },
  "funding": "https://github.com/wojtekmaj/package-manager-stats?sponsor=1"
}
